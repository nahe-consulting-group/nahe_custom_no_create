<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Modificación en account.view_move_form para facturas de clientes -->
    <record id="view_move_form_client_no_create" model="ir.ui.view">
        <field name="name">account.move.form.client.inherit.no_create</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Partner en facturas de clientes -->
	    	<xpath expr="//field[@name='partner_id']" position="attribute">
		    <attributte name="options">{'no_create': True, 'no_create_edit': True}</attribute>
		</xpath>
            <!-- Product y cuenta analítica en líneas de facturas de clientes -->
	    	<xpath expr="//field[@name='invoice_line_ids']//field[@name=product_id]" position="attribute">
		    <attributte name="options">{'no_create': True, 'no_create_edit': True}</attribute>
		</xpath>
		<xpath expr="//field[@name='invoice_line_ids']//field[@name=analytic_account_id]" position="attribute">
			<attributte name="options">{'no_create': True, 'no_create_edit': True}</attribute>
		</xpath>
        </field>
    </record>
</odoo>	
