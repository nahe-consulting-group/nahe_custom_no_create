<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Modificación en account.view_move_form para facturas de proveedor -->
    <record id="view_move_form_supplier_no_create" model="ir.ui.view">
        <field name="name">account.move.form.supplier.inherit.no_create</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Partner en facturas de proveedor -->
            <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}"/>
            <!-- Partner bank en facturas de proveedor -->
            <field name="partner_bank_id" options="{'no_create': True, 'no_create_edit': True}"/>
            <!-- Product y cuenta analítica en líneas de facturas de proveedor -->
            <field name="product_id" options="{'no_create': True, 'no_create_edit': True}"/>
            <field name="analytic_account_id" options="{'no_create': True, 'no_create_edit': True}"/>
        </field>
    </record>
</odoo>	