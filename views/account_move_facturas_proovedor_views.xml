<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Modificación en account.view_move_form para facturas de proveedor -->
    <record id="view_move_form_supplier_no_create" model="ir.ui.view">
        <field name="name">account.move.form.supplier.inherit.no_create</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Modificar el campo partner_id -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <!-- Modificar el campo partner_bank_id -->
            <xpath expr="//field[@name='partner_bank_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <!-- Modificar el campo product_id en las líneas de factura -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <!-- Modificar el campo analytic_account_id en las líneas de factura -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='analytic_account_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>	
